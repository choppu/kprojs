{
  "compilerOptions": {
    "outDir": "lib",
    "lib": ["ES2017", "ES6", "dom"],
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*.ts"
  ],
}